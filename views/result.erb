<div class="window">
  <div class="<%= @page.weather_data[:description] %>">

  </div>
</div>
<div class="information">
  <div class="high-low-weather">
    <span><%= @page.weather_data[:temp_max] ||= '-' %></span>
    <span><%= @page.weather_data[:temp_min] ||= '-' %></span>
  </div>
  <div class="main-summary">
    <span><%= @page.weather_data[:temp] %></span>
    <p><%= @page.weather_data[:description] %></p>
    <p>Feels like <%= @page.weather_data[:feels_like] ||= '-' %></p>
  </div>
  <div class="additional">

    <p><%= @page.weather_data[:name] %></p>
    <time id="weather-date" datetime="<%= @page.weather_data[:date] %>"><%= @page.display_date %></time>
    <p>Humidity <%= @page.weather_data[:humidity] ||= '-' %></p>
  </div>

    <script type="text/javascript" src="js/src/localDate.js"></script>

    <script>
      (new LocalDate('weather-date')).display();
    </script>
  </div>
</div>
